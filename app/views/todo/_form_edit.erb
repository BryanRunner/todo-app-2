<div class="panel-body">
  <h2>Edit Item</h2>
  <%= bootstrap_form_for @todo, url: {action: "update"}, remote:true do |f| %>
    <%= f.text_field(:title) %>
    <%= f.text_area(:note) %>
    <%= f.datetime_local_field(:due_date) %>
    <a class="btn btn-primary btn-back" href="javascript:void(0)">Back</a>
    <%= submit_tag("Update", class: 'btn btn-success') %>
  <% end %>
</div>
